<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:id="@+id/cardView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_education_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/student_logo"></ImageView>

        <TextView
            android:id="@+id/specialité_anné"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="roll"
            android:layout_marginLeft="7dp"
            android:textSize="16dp"
            android:textColor="@color/black"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/student_logo"
            app:layout_constraintBottom_toBottomOf="parent"




            ></TextView>
        <TextView
            android:id="@+id/n_ligne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="roll"

            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/specialité_anné"
            app:layout_constraintBottom_toBottomOf="parent"




            ></TextView>
        <TextView
            android:id="@+id/name"
            android:textSize="16dp"

            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/n_ligne"
            app:layout_constraintBottom_toBottomOf="parent"


            ></TextView>
        <TextView
            android:id="@+id/status"
            android:layout_marginLeft="7dp"
            android:textSize="16dp"

            android:text="status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/presentCount"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"

            ></TextView>
        <TextView
            android:id="@+id/presentCount"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"

            android:layout_marginRight="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/apsentCount"

            android:background="@drawable/roundedtextview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="4"

            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"


            ></TextView>
        <TextView
            android:id="@+id/apsentCount"
            android:textSize="16dp"
            android:background="@drawable/roundedtextview2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="2"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"


            ></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>